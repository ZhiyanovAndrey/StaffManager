            <TextBox Text=""/>
            <TextBlock Text="Новое Отчество"/>
            <TextBox Text=""/>
            <TextBlock Text="Новый Телефон"/>
            <TextBox Text=""/>
            <TextBlock Text="Новая должность"/>
            <TextBox Text=""/>
            <TextBlock Text="Новая зарплата"/>
            <TextBox Text=""/>
            <TextBlock Text="Новый отдел"/>
            <ComboBox/>
